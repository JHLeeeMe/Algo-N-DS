name: Google Java Format

on:
  push:
    branches: [ master ]
  pull_request:
    branches: [ master ]

jobs:
  formatting:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    - uses: actions/setup-java@v1
      with:
        java-version: 1.8
    - name: Google Java Format
      uses: axel-op/googlejavaformat-action@v3.1.0
      with:
        args: "--dry-run"
#       with:
#           args: "--skip-sorting-imports --replace"
